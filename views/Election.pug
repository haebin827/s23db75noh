extends layout

block content
  h1= title
  - let Elections=results
  //- button.btn( class="btn-primary ml-1", onclick= destinationcreate) Create
  div(class="container-fluid")
  div(class="row m-1")
    each election in Elections
      - let destinationupdate = `dispatch(\"/election/update?id=${election._id}\")`
      - let destinationcreate = `dispatch(\"/election/create\")`
      - let destinationdelete = `dispatch(\"/election/delete?id=${election._id}\")`
      - let destinationdetail = `dispatch(\"/election/details/?id=${election._id}\")`
      div(class="col-ml-1 btn btn-light") #{election._id} - #{election.year} - #{election.location} - #{election.candidate}
      button.btn( class="btn-primary ml-1", onclick= destinationcreate) Create
      button.btn( class="btn-secondary ml-1", onclick= destinationdetail) Details 
      button.btn( class="btn-info ml-1", onclick= destinationupdate) Update
      button.btn( class="btn-danger ml-1", onclick= destinationdelete) Delete

  script.
      function dispatch(path){
        window.location.href=path
      }
    